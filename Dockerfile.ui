FROM python:3.12-slim

# Install system dependencies if any (not strictly needed for basic streamlit but good practice)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install python dependencies explicitly as requested
RUN pip install streamlit httpx pandas requests

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Command to run the app
CMD ["streamlit", "run", "src/sitecal/ui/app.py", "--server.port", "8080", "--server.address", "0.0.0.0"]
